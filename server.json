{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "title": "deAPI MCP Server",
  "name": "io.github.deapi-ai/mcp-server-deapi",
  "description": "29 AI tools: audio/video transcription, image generation, TTS, OCR, embeddings via deAPI",
  "repository": {
    "url": "https://github.com/deapi-ai/mcp-server-deapi",
    "source": "github"
  },
  "version": "0.1.0",
  "remotes": [
    {
      "type": "streamable-http",
      "url": "https://mcp.deapi.ai/mcp",
      "variables": {
        "oauth_client_id": {
          "description": "OAuth Client ID",
          "value": "deapi-mcp"
        },
        "oauth_client_secret": {
          "description": "Your deAPI API key (get it at https://deapi.ai/settings/api-keys)",
          "isSecret": true,
          "isRequired": true,
          "format": "string",
          "placeholder": "<number>|<hash>"
        }
      }
    }
  ]
}